<header id="layout-header">

    <nav class="nav">
        <div class="left-div">
          <a href="/">
            <img
              class="img img-rounded"
              src="https://ninjasfiles.s3.amazonaws.com/0000000000003454.png"
              alt="logo"
            />
          </a>
        </div>
  
        <div class="right-nav">
          <% if(locals.user){ %>
          <div class="user">
            <a href="/users/profile/<%= locals.user._id %>">
      
              <% if(locals.user.avatar == undefined){ %>
                <i class="fa-solid fa-user"></i>
                <% }else{%>
                  <img
                  class="rounded-circle" id="user-dp"
                  src="<%= locals.user.avatar %>"
                  alt="logo"
                />
                <% } %>
              </a>
              <span><%= user.name %></span>
          </div>
          <% } %>
  

          <div class="nav-links">
            <ul>
              <li>
                <a href="/">Home |</a>
              </li>
              <% if(!locals.user){ %>
              <li>
                <a href="/users/sign-up">Sign Up |</a>
              </li>
              <% } %> <% if(!locals.user){ %>
              <li>
                <a href="/users/sign-in">Sign In</a>
              </li>
              <% } %> <% if(locals.user){ %>
              <li>
                <a href="/users/sign-out">Sign Out</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
 
</header>

